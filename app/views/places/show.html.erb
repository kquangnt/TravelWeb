<%= render 'partials/navbar' %>
<%= render 'partials/notification' %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @place.name %></h1>
      <p><%= @place.description %></p>
    </div>
    <div class="col-md-6">
      <div class="responsivewrapper">
        <div class="hold">
          <div class="slider-for">
            <% @place.place_photos.each do |photo| %>
              <div><%= image_tag(photo.image.url) %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="slider-nav">
        <% @place.place_photos.each do |photo| %>
          <div><%= image_tag(photo.image.url) %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-8 comments">
    <% @comments.each do |comment| %>
      <div class="row">
        <div class="col-md-1">
          <img src="http://makerepo.com/assets/default-avatar-19cf8cebb96b4d8beff4ef9cad0e5903d288c778c503777332a57085a65371be.png" alt="" width="50px" height="50px"/>
        </div>
        <div class="col-md-11">
          <p><strong><%= comment.user.name %></strong></p>
          <p><%= comment.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

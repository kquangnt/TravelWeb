<h1>Edit Place: <%= @place.name %></h1>

<%= form_for(@place, url: admin_place_path) do |f| %>
  <%= render partial: 'admin/layouts/error_messages', locals: {zone: @place} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :province %>
    <%= f.collection_select :province_id, Province.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <%= f.submit "Save Change", class: "btn btn-primary" %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Create a new Province</h1>

      <%= form_for(@province, url: admin_provinces_path) do |f| %>
        <%= render 'admin/provinces/error_messages' %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
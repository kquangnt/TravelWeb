<h1>Update Hotel</h1>

<%= form_for(@hotel, url: admin_hotel_path) do |f| %>
  <%= render partial: 'admin/layouts/error_messages', locals: {zone: @hotel} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :province %>
    <%= f.collection_select :province_id, Province.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :website %>
    <%= f.url_field :website, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: "form-control" %>
  </div>
  
  <%= f.submit "Save change", class: "btn btn-primary" %>
<% end %>